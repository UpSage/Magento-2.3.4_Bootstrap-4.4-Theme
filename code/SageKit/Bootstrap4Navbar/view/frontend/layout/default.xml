<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
 <body>
 
  <referenceContainer name="page.top" htmlTag="nav" htmlClass="navbar navbar-expand-md navbar-light bg-light d-block mb-4 p-0">

   <container name="navbar.tier.primary" htmlTag="div" htmlClass="bg-white py-2 py-md-3" before="-">
    <container name="navbar.tier.primary.container" htmlTag="div" htmlClass="container">

     <block class="Magento\Framework\View\Element\Template" name="navbar.toggler" template="SageKit_Bootstrap4Navbar::html/toggler.phtml" />

    </container>
   </container>

   <container name="navbar.tier.secondary" htmlTag="div" htmlClass="bg-light py-md-2 py-xl-3 border-bottom">
    <container name="navbar.tier.secondary.container" htmlTag="div" htmlClass="container">

     <container name="navbar.collapse" htmlTag="div" htmlClass="collapse navbar-collapse row" htmlId="navbarMain">
      <container name="navbar.collapse.col.left" htmlTag="div" htmlClass="col-lg-8 pb-2 pb-lg-0" />
      <container name="navbar.collapse.col.right" htmlTag="div" htmlClass="col-lg-4 pb-2 pb-lg-0" />
     </container>

    </container>
   </container>

   <referenceBlock name="navigation.sections" remove="true" />

  </referenceContainer>

  <move element="logo" destination="navbar.tier.primary.container" before="-" />
  <move element="minicart" destination="navbar.tier.primary.container" after="logo" />
  <move element="top.search" destination="navbar.collapse.col.right" before="-" />
  <move element="catalog.categories.topnav" destination="navbar.collapse.col.left" before="-" />

 </body>
</page>