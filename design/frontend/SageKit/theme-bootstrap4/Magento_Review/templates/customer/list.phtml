    <td data-th="<?= $block->escapeHtmlAttr(__('Actions')) ?>" class="actions font-weight-light">
     <a href="<?= $block->escapeUrl($block->getReviewUrl($review)) ?>" class="action more">
      <span><?= $block->escapeHtml(__('See Details')) ?></span>
     </a>
    </td>
