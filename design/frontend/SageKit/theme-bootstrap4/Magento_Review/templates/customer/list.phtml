    <td data-th="<?= $block->escapeHtmlAttr(__('Review')) ?>" class="description font-weight-light">
     <?php //phpcs:disable ?>
     <?= $this->helper(\Magento\Review\Helper\Data::class)->getDetailHtml($review->getDetail()) ?>
     <?php //phpcs:enable ?>
