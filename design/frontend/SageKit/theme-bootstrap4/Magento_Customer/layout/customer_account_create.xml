<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
 <body>
 
  <referenceContainer name="content">
   <container name="content.registration.row" htmlTag="div" htmlClass="row">
    <container name="content.registration.col.left" htmlTag="div" htmlClass="col-lg-8 col-xl-6">

     <referenceBlock name="customer_form_register">
      <action method="setShowAddressFields">
       <argument name="show.address.fields" xsi:type="boolean">true</argument>
      </action>
     </referenceBlock>
     
    </div>
   </container>
  </referenceContainer>
  
  <move element="customer_form_register" destination="content.registration.col.left" />
  
 </body>
</page>
